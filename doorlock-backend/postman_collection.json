            "body": {
              "mode": "raw",
              "raw": "{\n  \"visitorLogId\": \"VISITOR_LOG_ID\",\n  \"notes\": \"Authorized visitor\"\n}"
            },
            "url": {
              "raw": "{{BASE_URL}}/api/command/open",
