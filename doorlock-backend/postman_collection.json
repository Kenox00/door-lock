        {
          "name": "Register Device",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{TOKEN}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Front Door Lock\",\n  \"espId\": \"ESP32_001\",\n  \"location\": \"Main Entrance\",\n  \"firmwareVersion\": \"1.0.0\"\n}"
            },
            "url": {
              "raw": "{{BASE_URL}}/api/device/register",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "device", "register"]
            }
          }
        },
        {
          "name": "Get All Devices",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
