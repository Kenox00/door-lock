          }
        },
        {
          "name": "Get Device Stats",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{TOKEN}}"
              }
            ],
            "url": {
              "raw": "{{BASE_URL}}/api/device/stats",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "device", "stats"]
            }
          }
        }
      ]
    },
    {
      "name": "Door Operations",
      "item": [
        {
          "name": "Upload Visitor Photo",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "image",
                  "type": "file",
                  "src": "/path/to/image.jpg"
                },
                {
                  "key": "deviceId",
                  "value": "DEVICE_ID_HERE",
                  "type": "text"
                }
              ]
            },
            "url": {
              "raw": "{{BASE_URL}}/api/door/upload",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "door", "upload"]
            }
          }
        },
        {
          "name": "Get Pending Visitors",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{TOKEN}}"
              }
            ],
            "url": {
              "raw": "{{BASE_URL}}/api/door/logs/pending",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "door", "logs", "pending"]
            }
          }
        },
        {
          "name": "Get All Visitor Logs",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{TOKEN}}"
              }
            ],
            "url": {
              "raw": "{{BASE_URL}}/api/door/logs?page=1&limit=20",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "door", "logs"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
