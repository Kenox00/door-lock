# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Configuration
MONGO_URI=mongodb://localhost:27017/doorlock-db
# For MongoDB Atlas:
# MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/doorlock-db

# JWT Secret
JWT_SECRET=your-secret-key-change-this
JWT_EXPIRATION=7d

# MQTT Broker Configuration (if using MQTT)
MQTT_BROKER_URL=your-mqtt-broker-url
MQTT_CLIENT_ID=doorlock-backend
MQTT_USERNAME=your-mqtt-username
MQTT_PASSWORD=your-mqtt-password

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# CORS Configuration
# Admin on :5173, Camera on :3000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Camera App Configuration
# IMPORTANT: Change this when hosting to your production camera app URL
# Camera app runs on port 3000 (different from admin on 5173)
CAMERA_APP_URL=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
